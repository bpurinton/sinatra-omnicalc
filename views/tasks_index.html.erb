<h1>Task List</h1>

<h2>Add New Task</h2>

<form action="/tasks/create">
  <label for="name">Name:</label>
  <input type="text" name="query_task_name" id="name">

  <label for="description">Description:</label>
  <textarea name="query_task_description" id="description"></textarea>

  <input type="submit" value="Create Task">
</form>


<h2>ToDo</h2>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.name %>
      <a href="/tasks/<%= task.id %>">View</a>
      <a href="/tasks/<%= task.id %>/edit">Edit</a>
      <a href="/tasks/<%= task.id %>/delete">Delete</a>
    </li>
  <% end %>
</ul>
